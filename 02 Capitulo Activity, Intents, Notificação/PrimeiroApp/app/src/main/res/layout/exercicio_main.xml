<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnPrimeiroHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Mundo"
        app:layout_constraintBottom_toTopOf="@+id/btnSegundoHelloWorld"
        app:layout_constraintStart_toStartOf="@+id/btnSegundoHelloWorld"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSegundoHelloWorld"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Olá Mundo"
        app:layout_constraintBottom_toTopOf="@+id/btnTerceiroHelloWorld"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrimeiroHelloWorld" />

    <Button
        android:id="@+id/btnTerceiroHelloWorld"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Olá Mundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSegundoHelloWorld" />

</android.support.constraint.ConstraintLayout>