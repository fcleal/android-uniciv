<?xml version= "1.0" encoding= "utf-8" ?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnPrimeiroHelloWorld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Mundo"
        app:layout_constraintStart_toStartOf="@+id/btnSegundoHelloWorld"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSegundoHelloWorld"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Olá Mundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrimeiroHelloWorld" />


    <TextView
        android:id="@+id/textView3"
        style="@style/estiloExemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor"
        app:layout_constraintStart_toStartOf="@+id/btnSegundoHelloWorld"
        app:layout_constraintTop_toBottomOf="@+id/btnSegundoHelloWorld" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/vermerlho"
        android:text="Wagner"
        android:textColor="@color/azul"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bola_basquete"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:src="@drawable/bola_basquete"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="221dp"
        android:src="@drawable/bola_basquete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnTerceiroHelloWorld" />

    <Button
        android:id="@+id/btnTerceiroHelloWorld"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Olá Mundo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />
</android.support.constraint.ConstraintLayout>